@model IEnumerable<BookReservationSystem.Genre>

@{
    ViewBag.Title = "Index";
    int id = 1;
}

<h2 class="text-primary">Gernes</h2>

<p>
    @Html.ActionLink("Create New", "Create",null ,htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Genre_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="js-row">
        <td>
            @Html.DisplayFor(modelItem => id)
            @{ 
                id++;
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.Genre_ID }, htmlAttributes: new { @class = "btn btn-success" }) 
            
            <button class="js-delete btn btn-danger" genre-data="@item.Genre_ID">Delete</button>
        </td>
    </tr>
}

</table>


@section Scripts {
    
    <script>


        $('.js-row .js-delete').on('click', function () {
            let id = $(this);
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Genre/Delete/' + id.attr('genre-data'),
                        method: "post",
                        success: function () {

                            id.parents('.js-row').fadeOut()
                            Swal.fire(
                                'Deleted!',
                                'Deleted Successfully',
                                'success'
                            )

                        },

                        error: function () {
                            Swal.fire(
                                'Deleted Error!',
                                'Can not delete this item',
                                'error'
                            )
                        }
                    })
                    
                }
            })
            
        });
        


    </script>
    }